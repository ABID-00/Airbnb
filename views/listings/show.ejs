  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
          <h3>About <i>
              <%= list.title %>
            </i></h3>
          <img src="<%= list.image.url %>" alt="bnb image" class="img-fluid rounded mb-3"
            style="max-height: 300px; object-fit: cover;" />
          <div class="card-text mb-3">
            <p>
              <%= list.title %>
            </p>
            <p>
              <%= list.description %>
            </p>
            <p>â‚¹<%= list.price.toLocaleString("en-IN")%>
            </p>
            <p>
              <%= list.country %>
            </p>
          </div>
          <div class="d-flex justify-content-center gap-3">
            <form action="/listings/<%=list._id%>/edit">
              <button class="btn btn-primary">Edit</button>
            </form>
            <form action="/listing/<%=list._id%>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <br>
      <div class="my-3 mx-5">
        <form class="form-control" action="/listings/<%= list.id %>/reviews" method="POST" novalidate class="needs-validation">
          <label class="my-3 mx-5" for="rating">Rate us!</label>
          <input 
            type="range" 
            min="1" max="5" 
            id="rating" 
            name="review[rating]">
          <br>
          <label class="my-3 mx-5" for="content">Write a review...</label><br>
          <textarea 
            type="input" 
            name="review[content]" 
            id="comment" cols="60" 
            class="mx-5"
            required></textarea><br>
          <button type="submit" class="btn btn-dark mx-5 mt-3">Submit!</button>
        </form>
      </div>
    </div>
  </body>